<resources>
    <style name="ActionBarTitleTextStyle" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/window</item>
    </style>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/window</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>

        <!--Texto-->
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>

    </style>

    <color name="primary">#0265C1</color>
    <color name="window">#ffffff</color>
    <color name="text_primary">#000000</color>
    <color name="primary_dark">#90C9F9</color>

    <color name="button_register">#0265C1</color>

    <style name="Text" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextButton" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextTitle" parent="android:TextAppearance.Material.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
