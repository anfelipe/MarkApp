<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cambioDisp"
            android:padding="10dp"
            android:gravity="center"
            android:textAppearance="@style/Text"/>

        <EditText
            android:id="@+id/edtDocumento"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="12"
            android:hint="@string/nroDocummento"
            android:theme="@style/AppTheme"
            android:layout_gravity="center"
            android:textAppearance="@style/Text"/>

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="@string/btnaceptar"
            android:background="@drawable/button"
            android:backgroundTint="@color/button_register"
            android:textAppearance="@style/TextButton"/>

    </LinearLayout>
</LinearLayout><!-- From: file:/D:/GitHub/MarkApp/markApp/src/main/res/layout/dialog_cambiodisp.xml -->